<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:angle="0"
                android:centerX="50%"
                android:endColor="#ff66ff"
                android:centerColor="#ff99ff"
                android:startColor="#ff66ff"
                android:type="radial"
                android:gradientRadius="100dp"/>

            <stroke
                android:width="3dp"
                android:color="#ff0000" />

            <corners
                android:radius="100dp"/>

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>
</selector>